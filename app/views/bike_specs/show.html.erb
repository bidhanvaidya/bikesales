              <tr>
                <td>Weight  </td>
                <td><%= @bike_spec.weight  %></td>
              </tr>

              <tr>
                <td> Weight Including Oil, Gas, etc </td>
                <td><%= @bike_spec.g_weight  %></td>
              </tr>
              <tr>
                <td> Power/Weight Ratio</td>
                <td><%= @bike_spec.pw_ratio  %></td>
              </tr>
              <tr>
