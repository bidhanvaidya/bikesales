<script type="text/javascript">
  $('div.basic_info').hide();
  $('div.dimension').hide();
  $('div.other_spec').hide();
  $('div.comfort').hide();
  $('div.safety').hide();
  $('.icon-chevron-up').hide();
  $('a#basic_info').click(function()
  {
    $('div.basic_info').toggle();
