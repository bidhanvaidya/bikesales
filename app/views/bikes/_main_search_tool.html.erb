  <!--Indentation Complete-->
  <div class = "results_main_page">
    <div class= "legen">Search Bikes for Sale</div>

        <%=form_tag(search_bikes_path, :method => "get") do %>

          <div class = "row">
        	  <div class= "span6">
              <div  class="input-prepend">
                <span class="add-on">Make: </span>
                <%= select_tag "make", options_for_select(@makes.sort), :prompt => "Any Make", :class=>"input-drop-down" %>
              </div>
            </div>
            <div class= "span6">
              <div  class="input-prepend">
                <span class="add-on">Model: </span>     
                <%= select_tag "model", options_for_select(@models.sort), :prompt => "Any Model", :class=>"input-drop-down" %>
              </div>
            </div>
          </div>
          <div class = "row">
            <div class= "span6">
              <div  class="input-prepend">
                <span class="add-on">Price: </span>     
                <%= select_tag "price_from", options_for_select([
                  ["Min.", "0"],
                  ["Rs. 10,000", "10000"],
                  ["Rs. 25,000", "25000"],
                  ["Rs. 50,000", "50000"],
                  ["Rs. 75,000", "75000"],
                  ["Rs. 1,00,000", "100000"],
                  ["Rs. 1,50,000", "150000"],
                  ["Rs. 2,00,000", "200000"],
                  ["Rs. 3,00,000", "300000"],
                  ["Rs. 5,00,000", "500000"],
                  ["Rs. 10,00,000", "1000000"]
                  ]), :prompt => "Price From", :class=>"input-drop-down" %>
              </div>   
            </div>
            <div class= "span6">
              <div  class="input-prepend">
                <span class="add-on">Price: </span>     
                <%= select_tag "price_to", options_for_select([
                  ["Rs. 10,000", "10000"],
                  ["Rs. 25,000", "25000"],
                  ["Rs. 50,000", "50000"],
                  ["Rs. 75,000", "75000"],
                  ["Rs. 1,00,000", "100000"],
                  ["Rs. 1,50,000", "150000"],
                  ["Rs. 2,00,000", "200000"],
                  ["Rs. 3,00,000", "300000"],
                  ["Rs. 5,00,000", "500000"],
                  ["Rs. 10,00,000", "1000000"],
                  ["Max.", "99999999999"]
                  ]), :prompt => "Price To", :class=>"input-drop-down" %>
              </div>
            </div>
          </div>
          <div class = "row">
            <div class= "span6">
              <div  class="input-prepend">
                <span class="add-on">City: </span>     
      			    <%= select_tag :location, options_for_select([
                  "Any Cities",
                  "Bhaktapur",
                  "Bharatpur",
                  "Biratnagar",
                  "Birganj",
                  "Butwal",
                  "Dhangadhi",
                  "Dharan",
                  "Hetauda",
                  "Janakpur",
                  "Kathmandu", 
                  "Latitpur",
                  "Pokhara",
                  "Other"                  
                  ]),:class=>"input-drop-down" %>
              </div>
      		  </div>
            <div class= "span6">
              <div  class="input-prepend">
                <span class="add-on">Type: </span>     
          			<%= select_tag :type, options_for_select(['Any Type',"Dealer New", "Dealer Used", "Private Seller"]),:class=>"input-drop-down" %>
              </div>
        		</div>
          </div>
          <input class="btn btn-primary" name="commit" type="submit"  value ="Search" >
        <% end %>


  </div><!--div results -->