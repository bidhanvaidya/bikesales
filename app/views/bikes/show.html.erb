<%- model_class = @bike.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:_type) %>:</strong></dt>
  <dd><%= @bike._type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:_id) %>:</strong></dt>
  <dd><%= @bike._id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @bike.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:make) %>:</strong></dt>
  <dd><%= @bike.make %></dd>
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @bike.model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:variant) %>:</strong></dt>
  <dd><%= @bike.variant %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @bike.price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:odometer) %>:</strong></dt>
  <dd><%= @bike.odometer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body) %>:</strong></dt>
  <dd><%= @bike.body %></dd>
  <dt><strong><%= model_class.human_attribute_name(:type) %>:</strong></dt>
  <dd><%= @bike.type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:color) %>:</strong></dt>
  <dd><%= @bike.color %></dd>
  <dt><strong><%= model_class.human_attribute_name(:engine_capacity) %>:</strong></dt>
  <dd><%= @bike.engine_capacity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rego_no) %>:</strong></dt>
  <dd><%= @bike.rego_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:reg_expiry) %>:</strong></dt>
  <dd><%= @bike.reg_expiry %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vin_no) %>:</strong></dt>
  <dd><%= @bike.vin_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @bike.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @bike.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @bike.comment %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              bikes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_bike_path(@bike), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              bike_path(@bike),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
