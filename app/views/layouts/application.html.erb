<!DOCTYPE html>
<html lang="en">
  <head>
<%= javascript_include_tag "jquery.min" %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Bikesales" %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <%= stylesheet_link_tag "application", :media => "all" %>


    <link href='<%=image_tag "favicon.ico"%>' rel="shortcut icon">
    <link href="images/apple-touch-icon.png" rel="apple-touch-icon">
    <link href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon" sizes="72x72">
    <link href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon" sizes="114x114">
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">Bikesales</a>
          <div class="container-fluid nav-collapse">
            <ul class="nav">
              <li><%= link_to "Bikes For Sale", bikes_path%></li>

              <li><%= link_to "Sell your Bike", new_bike_path  %></li>
              <li><%= link_to "New Bike Showroom", showroom_bike_specs_path  %></li>
              
            </ul>
            <ul class = "nav pull-right">  
              <% if user_signed_in?%>
                          
                         
                          <li><a href="<%=profile_user_path(current_user)%>" ><i class="icon-user icon-white"></i><%=current_user.name%> </a></li>
                        
                          <li><%= link_to "Sign Out", destroy_user_session_path, method: "delete"  %>
                       
                </li>
              
              <%else%>
              <li><a href="#myModal" data-toggle="modal">Sign in</a></li>
              <%end%>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class= "span12" id="main_page_header">
          <%= render "shared/logo"%>
        </div>
        <div class="span12">
          <%= yield %>
        </div>
      </div><!--/row-->

      

    </div> <!-- /container -->
    <!-- Modal -->
    <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Sign In</h3>
      </div>
      <div class="modal-body"><div class= "modal_body">
        <p><a href = "<%=user_omniauth_authorize_path(:facebook)%>" id= "facebook-signin"> 
          <div class = "facebook_login">
            Sign In with Facebook
          </div>
        </a>
        </p>
        <%= link_to "I dont have a facebook account. Sign up with email", new_user_session_path %>
        </div>
        </div>
        <div class="modal-footer">
        
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
     
      </div>
    </div>
    
    <!-- Javascripts
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    
   


    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag "facebook" %>

    <div class="navbar navbar-fixed-bottom">
      <div class="navbar-inner">
        <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand-footer" >Bikesales</a>
          <div class="container-fluid nav-collapse">
            <ul class="nav">
              <li><p>&copy; Company 2013</p></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    
  


  </body>
</html>
<script type="text/javascript">
$("document").ready(function() {
  console.log($(window).width())
  if ($(window).width() <= 979 && $(window).width() >=600){
      setTimeout(function() {
          $("a.btn.btn-navbar").trigger('click');
      },1);}
});
</script>